<% deployments.each do |deployment| %>
  <article>
    <header><h2><%= deployment.server %></h2></header>
    <p id="deploy-<%= deployment.id %>-result">
    </p>
    <footer>
      <button hx-post="/accounts/<%= account.id %>/deployments/<%= deployment.id %>" hx-target="#deploy-<%= deployment.id %>-result">Deploy</button>
    </footer>
  </article>
<% end %>
