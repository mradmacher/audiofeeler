<section>
  <h2>Deployments</h2>
  <% deployments.each do |deployment| %>
    <article>
      <header><h3><%= deployment.server %></h3></header>
      <dl>
        <dt>Remote</dt>
        <dd><%= deployment.remote_dir %></dd>

        <dt>Username</dt>
        <dd><%= deployment.username ? "*****" : "-" %></dd>

        <dt>Password</dt>
        <dd><%= deployment.password ? "*****" : "-" %></dd>
      </dl>
      <footer>
        <button hx-post="/accounts/<%= account.id %>/deployments/<%= deployment.id %>/release" hx-target="#deployment-<%= deployment.id %>-result">Release</button>
        <button class="secondary" hx-get="/accounts/<%= account.id %>/deployments/<%= deployment.id %>/edit?view=paths" hx-target="#deployment-form">Edit paths</button>
        <button class="secondary" hx-get="/accounts/<%= account.id %>/deployments/<%= deployment.id %>/edit?view=credentials" hx-target="#deployment-form">Edit credentials</button>
        <button class="contrast" hx-delete="/accounts/<%= account.id %>/deployments/<%= deployment.id %>" hx-target="#content-slot">Delete</button>
      </footer>
    </article>
    <dialog id="deployment-<%= deployment.id %>-result" hx-on:htmx-after-swap="this.showModal()">
  <% end %>
  <% if deployments.size == 0 %>
    <button hx-get="/accounts/<%= account.id %>/deployments/new" hx-target="#deployment-form">Add deployment</button>
  <% end %>

  <dialog id="deployment-form" hx-on:htmx-after-swap="this.showModal()"></dialog>
</section>
